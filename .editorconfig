root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
visual_wrap = true
max_line_length = 100000

[*]
indent_style = space
indent_size = 4

[**.yaml]
indent_style = space
indent_size = 2

[**.yml]
indent_style = space
indent_size = 2

[**.md]
indent_style = space
indent_size = 2
